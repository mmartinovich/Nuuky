import React, { useEffect, useState } from 'react';
import {
  View,
  Text,
  StyleSheet,
  ScrollView,
  TouchableOpacity,
  RefreshControl,
  Alert,
} from 'react-native';
import { useRouter } from 'expo-router';
import { supabase } from '../../lib/supabase';
import { useAppStore } from '../../stores/appStore';
import { Friendship, User } from '../../types';

export default function OrbitScreen() {
  const router = useRouter();
  const { currentUser, friends, setFriends } = useAppStore();
  const [refreshing, setRefreshing] = useState(false);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    loadFriends();
    setupRealtimeSubscription();
  }, []);

  const loadFriends = async () => {
    try {
      const { data, error } = await supabase
        .from('friendships')
        .select(`
          *,
          friend:friend_id (
            id,
            display_name,
            mood,
            is_online,
            last_seen_at,
            avatar_url
          )
        `)
        .eq('user_id', currentUser?.id)
        .eq('status', 'accepted');

      if (error) throw error;

      setFriends(data || []);
    } catch (error: any) {
      console.error('Error loading friends:', error);
      Alert.alert('Error', 'Failed to load friends');
    } finally {
      setLoading(false);
      setRefreshing(false);
    }
  };

  const setupRealtimeSubscription = () => {
    // Subscribe to presence changes
    const channel = supabase
      .channel('presence-changes')
      .on(
        'postgres_changes',
        {
          event: '*',
          schema: 'public',
          table: 'users',
        },
        (payload) => {
          console.log('User updated:', payload);
          loadFriends(); // Reload friends when any user updates
        }
      )
      .subscribe();

    return () => {
      supabase.removeChannel(channel);
    };
  };

  const handleRefresh = () => {
    setRefreshing(true);
    loadFriends();
  };

  const getMoodColor = (mood: User['mood']) => {
    switch (mood) {
      case 'good':
        return '#4ade80'; // Green
      case 'neutral':
        return '#facc15'; // Yellow
      case 'not_great':
        return '#9ca3af'; // Gray
      case 'reach_out':
        return '#a855f7'; // Purple
      default:
        return '#9ca3af';
    }
  };

  const getMoodEmoji = (mood: User['mood']) => {
    switch (mood) {
      case 'good':
        return 'üòä';
      case 'neutral':
        return 'üòê';
      case 'not_great':
        return 'üòî';
      case 'reach_out':
        return 'üÜò';
      default:
        return 'üòê';
    }
  };

  if (loading) {
    return (
      <View style={styles.container}>
        <Text style={styles.loadingText}>Loading...</Text>
      </View>
    );
  }

  return (
    <View style={styles.container}>
      <ScrollView
        contentContainerStyle={styles.scrollContent}
        refreshControl={
          <RefreshControl refreshing={refreshing} onRefresh={handleRefresh} />
        }
      >
        {/* Current User Status */}
        <View style={styles.userCard}>
          <Text style={styles.userName}>{currentUser?.display_name}</Text>
          <Text style={styles.userPhone}>{currentUser?.phone}</Text>

          {/* Mood Selector - Simplified for now */}
          <View style={styles.moodContainer}>
            <Text style={styles.moodLabel}>Your mood:</Text>
            <Text style={styles.moodEmoji}>
              {getMoodEmoji(currentUser?.mood || 'neutral')}
            </Text>
          </View>
        </View>

        {/* Friends Orbit */}
        <View style={styles.orbitContainer}>
          <Text style={styles.sectionTitle}>Your Friends</Text>

          {friends.length === 0 ? (
            <View style={styles.emptyState}>
              <Text style={styles.emptyText}>No friends yet</Text>
              <Text style={styles.emptySubtext}>
                Add friends to see them here
              </Text>
            </View>
          ) : (
            <View style={styles.friendsList}>
              {friends.map((friendship) => {
                const friend = friendship.friend as User;
                return (
                  <TouchableOpacity
                    key={friendship.id}
                    style={styles.friendCard}
                    onPress={() => {
                      // TODO: Show friend options (nudge, profile, etc.)
                      Alert.alert(
                        friend.display_name,
                        `Mood: ${friend.mood}\nStatus: ${friend.is_online ? 'Online' : 'Offline'}`
                      );
                    }}
                  >
                    <View
                      style={[
                        styles.friendDot,
                        {
                          backgroundColor: getMoodColor(friend.mood),
                          opacity: friend.is_online ? 1 : 0.5,
                        },
                      ]}
                    />
                    <Text style={styles.friendName}>{friend.display_name}</Text>
                    {friend.is_online && (
                      <View style={styles.onlineBadge}>
                        <View style={styles.onlineDot} />
                      </View>
                    )}
                  </TouchableOpacity>
                );
              })}
            </View>
          )}
        </View>

        {/* Quick Actions */}
        <View style={styles.actionsContainer}>
          <TouchableOpacity
            style={styles.actionButton}
            onPress={() => router.push('/(main)/profile')}
          >
            <Text style={styles.actionText}>Profile</Text>
          </TouchableOpacity>

          <TouchableOpacity
            style={styles.actionButton}
            onPress={() => router.push('/(main)/settings')}
          >
            <Text style={styles.actionText}>Settings</Text>
          </TouchableOpacity>
        </View>
      </ScrollView>
    </View>
  );
}

